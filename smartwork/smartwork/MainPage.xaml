<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:smartwork.Pages"
             x:Class="smartwork.MainPage">
    
    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,*,Auto">

        <Label  Grid.ColumnSpan="3" Text="00:00:00" HorizontalTextAlignment="Center" FontSize="Header"></Label>
        <Button Grid.Row="1" Grid.Column="0"
            Text="Start/Stop"
            WidthRequest="200"
            HeightRequest="200"
            BackgroundColor="DodgerBlue"
            TextColor="White"
            CornerRadius="100" />
        

        <Grid RowDefinitions="Auto,Auto" Grid.Column="2" Grid.Row="1">
            <Label Text="Pause in min" FontSize="Medium"/>
            <Entry Grid.Row="1"/>
        </Grid>


        <Button Grid.Column="1"  Grid.Row="2" Text="Abschicken" ></Button>
        
        
    </Grid>
</ContentPage>
