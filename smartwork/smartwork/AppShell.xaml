<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="smartwork.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:smartwork"
    xmlns:pages="clr-namespace:smartwork.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="smartwork">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
            
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>

        

        <Tab Title="Manual">
            <ShellContent
        ContentTemplate="{DataTemplate pages:ManualPage}"
        Route="ManualPage" />
        </Tab>
    </TabBar>

</Shell>
