<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="smartwork.Pages.ManualPage"
             Title="Manuelle Zeiteingabe">

    <ScrollView>
        <Grid ColumnDefinitions="Auto,*"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnSpacing="10"
          RowSpacing="8"
          Padding="20">

            <!-- Überschrift -->
            <Label Grid.ColumnSpan="2"
               Text="Manuelle Zeiteingabe"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

            <!-- Datum -->
            <Label Text="Datum:" />
            <DatePicker Grid.Column="1"
                    Date="{Binding SelectedDate}"
                    HorizontalOptions="FillAndExpand"/>

            <!-- Von -->
            <Label Grid.Row="2" Text="Von:" />
            <TimePicker Grid.Row="2"
            Grid.Column="1"
            Time="{Binding TimeFrom}"
            Format="HH:mm" />

            <!-- Bis -->
            <Label Grid.Row="3" Text="Bis:" />
            <TimePicker Grid.Row="3"
            Grid.Column="1"
            Time="{Binding TimeTo}"
            Format="HH:mm" />

            <!-- Pause -->
            <Label Grid.Row="4" Text="Pause (Min):" />
            <Entry Grid.Row="4"
               Grid.Column="1"
               Text="{Binding PauseMinutes}"
               Placeholder="z. B. 30"/>

            <!-- Dauer -->
            <Label Grid.Row="5" Text="Dauer:" />
            <Entry Grid.Row="5"
               Grid.Column="1"
               Text="{Binding Duration}"
               IsReadOnly="True"
               TextColor="Gray"
               BackgroundColor="#f0f0f0"/>

            <!-- Anmerkung -->
            <Label Grid.Row="6" Text="Anmerkung:" />
            <Entry Grid.Row="6"
               Grid.Column="1"
               Text="{Binding Note}"
               Placeholder="z. B. Home Office"/>

            <!-- Speichern-Button -->
            <Button Grid.Row="7"
                Grid.ColumnSpan="2"
                Text="Speichern"
                Command="{Binding SaveCommand}"
                BackgroundColor="#007ACC"
                TextColor="White"
                CornerRadius="5"
                Margin="0,10,0,0"/>

        </Grid>
    </ScrollView>



</ContentPage>