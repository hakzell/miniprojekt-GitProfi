<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="smartwork.Pages.ManualPage"
             Title="Manuelle Zeiteingabe">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Titel -->
            <Label Text="Manuelle Zeiteingabe"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Datum -->
            <HorizontalStackLayout VerticalOptions="Center" Spacing="10">
                <Label Text="Datum auswählen:" VerticalOptions="Center" />
                <DatePicker Date="{Binding SelectedDate}" />
            </HorizontalStackLayout>

            <!-- Zwei Spalten: Vor Ort / Home Office -->
            <Grid ColumnDefinitions="*,1,*" RowDefinitions="Auto" ColumnSpacing="10" Padding="10">
                <!-- Vor Ort -->
                <VerticalStackLayout Grid.Column="0" Spacing="10">
                    <Label Text="VOR ORT" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" />

                    <Label Text="von:" />
                    <TimePicker Time="{Binding FromTime}" />

                    <Label Text="bis:" />
                    <TimePicker Time="{Binding ToTime}" />

                    <Label Text="Pause in Min:" />
                    <Entry Text="{Binding BreakMinutes}" Placeholder="z. B. 30" />

                    <Button Text="SAVE"
                            Command="{Binding SaveLocalCommand}"
                            BackgroundColor="LightGray"
                            CornerRadius="8" />
                </VerticalStackLayout>

                <!-- Trennlinie -->
                <BoxView Grid.Column="1"
                         WidthRequest="1"
                         Color="Gray"
                         HorizontalOptions="Center"
                         VerticalOptions="Fill" />

                <!-- Home Office -->
                <VerticalStackLayout Grid.Column="2" Spacing="10">
                    <Label Text="HOME OFFICE" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" />

                    <Label Text="Dauer:" />

                    <HorizontalStackLayout Spacing="10">
                        <Entry WidthRequest="60"
           Placeholder="Stunden"
           Keyboard="Numeric"
           Text="{Binding DurationHours}" />

                        <Label Text=":" VerticalOptions="Center" />

                        <Entry WidthRequest="60"
           Placeholder="Minuten"
           Keyboard="Numeric"
           Text="{Binding DurationMinutes}" />
                    </HorizontalStackLayout>

                    <Label Text="Anmerkung:" />
                    <Entry Text="{Binding Note}" Placeholder="Optional" />

                    <Button Text="SAVE"
                            Command="{Binding SaveRemoteCommand}"
                            BackgroundColor="LightGray"
                            CornerRadius="8" />
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>