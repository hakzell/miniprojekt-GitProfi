<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="smartwork.Pages.ExportPage"
             Title="ExportPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Ãœberschrift -->
            <Label Text="Auswertung"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Monat -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Monat:" FontSize="16" VerticalTextAlignment="Center" />
                <Entry Text="{Binding Month}" WidthRequest="100" />
            </HorizontalStackLayout>

            <!-- Vor- und Nachname -->
            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto" ColumnSpacing="10" RowSpacing="10">
                <Label Grid.Row="0" Text="Vorname:" VerticalTextAlignment="Center" />
                <Entry Grid.Row="0" Grid.Column="1" Text="{Binding Firstname}" />

                <Label Grid.Row="1" Text="Nachname:" VerticalTextAlignment="Center" />
                <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Lastname}" />
            </Grid>

            <!-- Datenfeld -->
            <Frame BorderColor="LightGray" Padding="10" HeightRequest="400">
                <ScrollView>
                    <Label Text="{Binding ReportText}" FontSize="14" TextColor="Gray" />
                </ScrollView>
            </Frame>

            <!-- Export-Button -->
            <Button Text="Exportieren"
                    Command="{Binding ExportCommand}"
                    HorizontalOptions="End"
                    WidthRequest="120" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>